            <Label Text="Autor: Peter Radvan" Margin="20"  HorizontalOptions="CenterAndExpand" />
            <Image Source="author.JPG" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>