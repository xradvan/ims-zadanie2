             x:Class="zadanie2.AboutPage"
             Title="O aplikácií">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS, Android" Value="20,20,20,20" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Zadanie č. 2 z predmetu IMS"  HorizontalOptions="CenterAndExpand" FontSize="Large"/>
